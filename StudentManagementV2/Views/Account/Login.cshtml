
@model StudentManagementV2.Api.ViewModels.LoginViewModel
 
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<h1>@ViewBag.Title</h1>

<div class="row justify-content-center">
    <div class="col-md-4">
        <section>

            <div>
                <h2 class="text-dark">Log In</h2>
            </div>

            <hr />

            <p>@Html.ValidationMessage("loginFail", new { @class="text-danger" })</p>
            <br />

            <div>
                @Html.ActionLink("Register New Account", "Register", "Account")
            </div>

            <br />
            
            <div class="border border-dark rounded p-5">

                <form method="post" action="@Url.Action("Login", "Account")">
                
                    <input type="hidden" value="@Model.ReturnUrl"/>
               
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input class="form-control" type="email" name="email" id="email" placeholder="Email"/>
                    </div>
                
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input class="form-control" type="password" name="password" id="password" placeholder="Password"/>
                    </div>
                
                    <input type="checkbox" name="rememberMe" id="rememberMe"/>
                    <label for="rememberMe">Remember Me</label>
                
                    <div class="form-group">
                        <button type="submit" class="btn btn-secondary">Log in</button>
                    </div>

                </form>

            </div>
            
        </section>
    </div>
</div>
