@using StudentManagementV2.Api.ViewModels
@model DepartmentViewModel

@{
    ViewBag.Title = "UpdateDepartment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update Department</h1>

<form class="d-flex flex-column" method="post" action="@Url.Action("SaveUpdateDepartment", "Department")">
    <div class="form-group">
        @*<label for="deptID">Department ID</label>
        <input class="form-control" placeholder="Department ID" name="deptId" id="deptID" value="@Model.DeptId" readonly/>*@
        @Html.LabelFor(d => d.DeptId)
        @Html.TextBoxFor(d => d.DeptId, new { @class="form-control", @value=@Model.DeptId, @readonly="readonly" })
    </div>

    <div class="form-group">
        @*<label for="deptName">Department Name</label>
        <input class="form-control" placeholder="Department Name" name="deptName" id="deptName" value="@Model.DeptName"/>*@
        @Html.LabelFor(d => d.DeptName)
        @Html.TextBoxFor(d => d.DeptName, new { @class="form-control", @placeholder="Department Name", @value=@Model.DeptName })
        @Html.ValidationMessageFor(d => d.DeptName, null, new { @class="text-danger" })
    </div>
    
    <div class="d-flex justify-content-end">
        <button type="submit">Save</button>
    </div>
    
</form>
